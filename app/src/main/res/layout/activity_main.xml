<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_layout_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?android:colorPrimary">
            <TextView
                android:id="@+id/text_view_city_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/big_title"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/city_desc"
                android:textSize="@dimen/subtitle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/morpheo_sun"
                    android:contentDescription="@string/morpheo" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/city_temp"
                    android:textSize="@dimen/big_temp"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/big_temp"
            android:inputType="text"
            android:hint="@string/votre_message"
            />

        <Button
            android:id="@+id/button_favoris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:text="@string/favoris" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_no_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/pas_connexion"
        android:gravity="center"
        android:visibility="invisible"/>
</RelativeLayout>


